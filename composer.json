{
    "name": "wisembly/silexcms",
    "description": "Ultra lightweight CMS based on top of Silex",
    "license": "MIT",
    "keywords": ["library", "silex", "CMS", "framework"],

    "autoload": {
        "psr-0": {
            "SilexCMS"        : "src/",
            "SilexCMS\\Tests" : "tests/"
        }
    },

    "require": {
        "php"                 : ">=5.3.2",
        "doctrine/dbal"       : "2.2.*",
        "silex/silex"         : "~1.0.0",
        "symfony/form"        : "2.1.*",
        "symfony/twig-bridge" : "2.1.*",
        "twig/extensions"     : "1.0.*",
        "symfony/browser-kit" : "2.2.*",
        "symfony/translation" : "2.1.*",
        "symfony/config"      : "2.1.*",
        "symfony/yaml"        : "2.1.*",
        "symfony/validator"   : "2.1.*",
        "twig/twig"           : ">=1.8,<2.0-dev",
        "knplabs/console-service-provider": "dev-master"
    },

    "require-dev": {
        "symfony/debug"       : "2.4.*",
        "phpunit/phpunit"     : "~3.7.0"
    },

    "config": {
        "bin-dir": "bin"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
